{
    "name": "root",
    "private": true,
    "engines": {
        "node": "10.x",
        "yarn": "1.x"
    },
    "scripts": {
        "prestart:api": "lerna run build --scope api",
        "start:api": "lerna run start --scope api",
        "prestart:app": "lerna run build --scope app",
        "start:app": "lerna run start --scope app",
