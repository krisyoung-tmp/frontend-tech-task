        "@testing-library/dom": "^5.6.0",
        "cypress": "^3.4.0"
    },
    "dependencies": {
        "lerna": "^3.13.4",
        "dotenv": "^8.0.0",
        "pm2": "^3.5.1",
        "@babel/cli": "^7.5.5",
        "@babel/core": "7.5.0",
        "@babel/node": "7.5.0",
        "@babel/preset-env": "^7.5.0"
    }
}
